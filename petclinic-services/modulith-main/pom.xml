    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>build-info</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <version>7.16.0</version>
                <executions>
                    <execution>
                        <id>generate-owners</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/openapi.yml</inputSpec>
                            <generatorName>spring</generatorName>
                            <library>spring-boot</library>
                            <output>${project.build.directory}/generated-sources/openapi/owners</output>
                            <apiPackage>org.springframework.samples.petclinic.owners.api</apiPackage>
                            <modelPackage>org.springframework.samples.petclinic.owners.web.dto</modelPackage>
                            <modelNameSuffix>Dto</modelNameSuffix>
                            <generateSupportingFiles>true</generateSupportingFiles>
                            <globalProperties>
                                <apis>Owner,Pet</apis>
                                <models>Owner,OwnerFields,Pet,PetFields</models>
                                <modelTests>false</modelTests>
                                <apiTests>false</apiTests>
                                <supportingFiles>ApiUtil.java</supportingFiles>
                            </globalProperties>
                            <configOptions>
                                <interfaceOnly>true</interfaceOnly>
                                <useTags>true</useTags>
                                <useSpringBoot3>true</useSpringBoot3>
                                <performBeanValidation>true</performBeanValidation>
                                <dateLibrary>java8</dateLibrary>
                                <openApiNullable>false</openApiNullable>
                                <serializationLibrary>jackson</serializationLibrary>
                                <documentationProvider>springdoc</documentationProvider>
                                <generateApis>true</generateApis>
                            </configOptions>
                            <typeMappings>
                                <ProblemDetail>ProblemDetailDto</ProblemDetail>
                                <ValidationMessage>ValidationMessageDto</ValidationMessage>
                            </typeMappings>
                            <importMappings>
                                <ProblemDetail>org.springframework.samples.petclinic.platform.web.dto.ProblemDetailDto</ProblemDetail>
                                <ProblemDetailDto>org.springframework.samples.petclinic.platform.web.dto.ProblemDetailDto</ProblemDetailDto>
                                <ValidationMessage>org.springframework.samples.petclinic.platform.web.dto.ValidationMessageDto</ValidationMessage>
                                <ValidationMessageDto>org.springframework.samples.petclinic.platform.web.dto.ValidationMessageDto</ValidationMessageDto>
                            </importMappings>
                            <skipIfSpecIsUnchanged>false</skipIfSpecIsUnchanged>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-catalog</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/openapi.yml</inputSpec>
                            <generatorName>spring</generatorName>
                            <library>spring-boot</library>
                            <output>${project.build.directory}/generated-sources/openapi/catalog</output>
                            <apiPackage>org.springframework.samples.petclinic.catalog.api</apiPackage>
                            <modelPackage>org.springframework.samples.petclinic.catalog.web.dto</modelPackage>
                            <modelNameSuffix>Dto</modelNameSuffix>
                            <generateSupportingFiles>true</generateSupportingFiles>
