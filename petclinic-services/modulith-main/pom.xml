                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/openapi.yml</inputSpec>
                            <generatorName>spring</generatorName>
                            <library>spring-boot</library>
                            <output>${project.build.directory}/generated-sources/openapi/visits</output>
                            <apiPackage>org.springframework.samples.petclinic.visits.api</apiPackage>
                            <modelPackage>org.springframework.samples.petclinic.visits.web.dto</modelPackage>
                            <modelNameSuffix>Dto</modelNameSuffix>
                            <generateSupportingFiles>true</generateSupportingFiles>
                            <globalProperties>
                                <apis>Visit</apis>
                                <models>Visit,VisitFields</models>
                                <modelTests>false</modelTests>
                                <apiTests>false</apiTests>
                                <supportingFiles>ApiUtil.java</supportingFiles>
                            </globalProperties>
                            <configOptions>
                                <interfaceOnly>true</interfaceOnly>
                                <useTags>true</useTags>
                                <useSpringBoot3>true</useSpringBoot3>
                                <performBeanValidation>true</performBeanValidation>
                                <dateLibrary>java8</dateLibrary>
                                <openApiNullable>false</openApiNullable>
                                <generateApis>true</generateApis>
                            </configOptions>
                            <typeMappings>
                                <ProblemDetail>ProblemDetailDto</ProblemDetail>
                                <ValidationMessage>ValidationMessageDto</ValidationMessage>
                            </typeMappings>
                            <importMappings>
                                <ProblemDetail>org.springframework.samples.petclinic.platform.web.dto.ProblemDetailDto</ProblemDetail>
                                <ProblemDetailDto>org.springframework.samples.petclinic.platform.web.dto.ProblemDetailDto</ProblemDetailDto>
                                <ValidationMessage>org.springframework.samples.petclinic.platform.web.dto.ValidationMessageDto</ValidationMessage>
                                <ValidationMessageDto>org.springframework.samples.petclinic.platform.web.dto.ValidationMessageDto</ValidationMessageDto>
                            </importMappings>
                            <skipIfSpecIsUnchanged>false</skipIfSpecIsUnchanged>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-platform</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/openapi.yml</inputSpec>
                            <generatorName>spring</generatorName>
                            <library>spring-boot</library>
                            <output>${project.build.directory}/generated-sources/openapi/platform</output>
                            <apiPackage>org.springframework.samples.petclinic.platform.api</apiPackage>
                            <modelPackage>org.springframework.samples.petclinic.platform.web.dto</modelPackage>
                            <modelNameSuffix>Dto</modelNameSuffix>
                            <generateSupportingFiles>true</generateSupportingFiles>
                            <globalProperties>
                                <apis>Failing</apis>
                                <models>ProblemDetail,ValidationMessage</models>
                                <modelTests>false</modelTests>
                                <apiTests>false</apiTests>
                                <supportingFiles>ApiUtil.java</supportingFiles>
                            </globalProperties>
                            <configOptions>
                                <interfaceOnly>true</interfaceOnly>
                                <useTags>true</useTags>
                                <useSpringBoot3>true</useSpringBoot3>
                                <performBeanValidation>true</performBeanValidation>
                                <dateLibrary>java8</dateLibrary>
                                <openApiNullable>false</openApiNullable>
                                <generateApis>true</generateApis>
                            </configOptions>
                            <skipIfSpecIsUnchanged>false</skipIfSpecIsUnchanged>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>fix-generated-error-imports</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <replaceregexp match="import org.springframework.samples.petclinic\\.[^.]+\\.web\\.dto\\.ProblemDetailDto;" replace="import org.springframework.samples.petclinic.platform.web.dto.ProblemDetailDto;" flags="g">
                                    <fileset dir="${project.build.directory}/generated-sources/openapi">
                                        <include name="**/*.java"/>
                                    </fileset>
                                </replaceregexp>
                                <replaceregexp match="import org.springframework.samples.petclinic\\.[^.]+\\.web\\.dto\\.ValidationMessageDto;" replace="import org.springframework.samples.petclinic.platform.web.dto.ValidationMessageDto;" flags="g">
                                    <fileset dir="${project.build.directory}/generated-sources/openapi">
                                        <include name="**/*.java"/>
                                    </fileset>
                                </replaceregexp>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-sources/openapi/owners/src/main/java</source>
                                <source>${project.build.directory}/generated-sources/openapi/catalog/src/main/java</source>
                                <source>${project.build.directory}/generated-sources/openapi/vets/src/main/java</source>
                                <source>${project.build.directory}/generated-sources/openapi/iam/src/main/java</source>
                                <source>${project.build.directory}/generated-sources/openapi/visits/src/main/java</source>
                                <source>${project.build.directory}/generated-sources/openapi/platform/src/main/java</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>${mapstruct.version}</version>
                        </path>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok-mapstruct-binding</artifactId>
                            <version>0.2.0</version>
                        </path>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>1.18.32</version>
                        </path>
                        <path>
                            <groupId>org.springframework.boot</groupId>
                            <artifactId>spring-boot-configuration-processor</artifactId>
                        </path>
                    </annotationProcessorPaths>
                    <compilerArgs>
                        <compilerArg>-Amapstruct.suppressGeneratorTimestamp=true</compilerArg>
                        <compilerArg>-Amapstruct.suppressGeneratorVersionInfoComment=true</compilerArg>
                        <compilerArg>-Amapstruct.defaultComponentModel=spring</compilerArg>
                    </compilerArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
