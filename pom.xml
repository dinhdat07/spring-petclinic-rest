            <execution>
                <id>generate-platform</id>
                <phase>generate-sources</phase>
                <goals><goal>generate</goal></goals>
                <configuration>
                    <inputSpec>${project.basedir}/src/main/resources/openapi.yml</inputSpec>
                    <generatorName>spring</generatorName>
                    <library>spring-boot</library>
                            <output>${project.build.directory}/generated-sources/openapi/platform</output>
                            <apiPackage>org.springframework.samples.petclinic.platform.api</apiPackage>
                            <modelPackage>org.springframework.samples.petclinic.platform.web.dto</modelPackage>
                            <modelNameSuffix>Dto</modelNameSuffix>
                            <generateSupportingFiles>true</generateSupportingFiles>
                            <globalProperties>
