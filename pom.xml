                                    <fileset dir="${project.build.directory}/generated-sources/openapi">
                                        <include name="**/*.java"/>
                                    </fileset>
                                </replaceregexp>
                                <replaceregexp match="import org.springframework.samples.petclinic\.[^.]+\.web\.dto\.ValidationMessageDto;" replace="import org.springframework.samples.petclinic.platform.web.dto.ValidationMessageDto;" flags="g">
                                    <fileset dir="${project.build.directory}/generated-sources/openapi">
                                        <include name="**/*.java"/>
                                    </fileset>
                                </replaceregexp>
